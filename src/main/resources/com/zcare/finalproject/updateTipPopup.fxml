<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.zcare.finalproject.UpdateTipController">
    <children>
        <Label layoutX="173.0" layoutY="23.0" text="Update Your Tip">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <Label layoutX="35.0" layoutY="85.0" text="Title:" />
        <TextField fx:id="updateTitle" layoutX="120.0" layoutY="78.0" prefHeight="35.0" prefWidth="340.0" promptText="Tip Title" />

        <Label layoutX="35.0" layoutY="135.0" text="Content:" />
        <TextArea fx:id="updateContent" layoutX="120.0" layoutY="130.0" prefHeight="160.0" prefWidth="340.0" promptText="Update tip content..." wrapText="true" />

        <Button fx:id="updateBtn" layoutX="320.0" layoutY="320.0" mnemonicParsing="false" onAction="#handleUpdateTip" prefHeight="35.0" prefWidth="140.0" text="Update" />
    </children>
</AnchorPane>
