<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="250" prefWidth="400" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.zcare.finalproject.CompleteAppointmentController">
    <children>
        <Label alignment="CENTER" layoutY="14.0" prefHeight="27.0" prefWidth="401.0" text="Complete Appointment">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>

        <TextArea fx:id="doctorNoteArea" layoutX="30.0" layoutY="60.0" prefHeight="100.0" prefWidth="340.0" promptText="Write your note or prescription..." />

        <Button fx:id="submitCompletionBtn" layoutX="150.0" layoutY="179.0" mnemonicParsing="false" onAction="#handleSubmitCompletion" prefHeight="34.0" prefWidth="100.0" text="Submit" />
    </children>
</AnchorPane>
